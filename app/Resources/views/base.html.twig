<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %} SisVisualCal {% endblock %}</title>

    {% block stylesheets %}
    <!-- Fonts -->
    
    <!-- Styles -->
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('css/site.css') }}" rel="stylesheet">
    <link href="{{ asset('css/fontawesome-all.css') }}" rel="stylesheet">
    <style>
        body {
            /*font-family: 'Lato';*/
        }
        .fa-btn {
            margin-right: 6px;
        }
    </style>
    {% endblock %}
    
</head>
<body id="app-layout">
    

    <nav class="navbar sticky-top navbar-expand-lg bg-basso-red">
        <div class="container">
        <a href="#" class="navbar-brand">
            <img src="{{ asset('images/bassosa.png') }}" height="28" alt="Basso S.A." >
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a class="nav-link" href="{{ path('gage')}}">Instrumentos</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('calibracion')}}">Calibraciones</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('ryr')}}">RyR</a></li>
                {# if is_granted('ROLE_ADMIN') or is_granted('ROLE_PUESTO_ADMIN')  #}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Archivo
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="{{ path('almacen') }}">Almacen</a>
                        <a class="dropdown-item" href="{{ path('estado') }}">Estado</a>
                        <a class="dropdown-item" href="{{ path('fabricante') }}">Fabricante</a>
                        <a class="dropdown-item" href="{{ path('owner') }}">Dueños</a>
                        <a class="dropdown-item" href="{{ path('tipo') }}">Tipos</a>
                        <a class="dropdown-item" href="{{ path('ubicacion') }}">Ubicaciones</a>
                        <a class="dropdown-item" href="{{ path('unidmedida') }}">Unid. Medidas</a>
                        <a class="dropdown-item" href="{{ path('calibraciontipo') }}">Tipos Calibraciones</a>
                        <a class="dropdown-item" href="{{ path('ryrtipo') }}">Tipos RyR</a>
                    </div>
                </li>
                {# endif #}
                <!-- Authentication Links -->
                {% if app.user %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownUser" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{ app.user.username }}
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownUser">
                        <a class="dropdown-item" href="{{ path('logout')}}">Salir</a>
                    </div>
                </li>
                {% else %}
                <li class="nav-item"><a class="nav-link" href="{{ path('login')}}">Login</a></li>
                <li class="nav-item"><a  class="nav-link"href="{{ path('register')}}">Register</a></li>
                {% endif %}
            </ul>
           
        </div>
        </div>
    </nav>

    <div class="container">
        {% block menu %}
                {{ wo_render_breadcrumbs({separator: '', listId: 'breadcrumbs', viewTemplate: "yourBreadcrumbs.html.twig"}) }}            
        {% endblock %}
        {% block body %}{% endblock %}
    </div>
    {% block bodyFooter %}
        <br>
        <div class="fixed-bottom row" style="color: white;vertical-align: middle;text-align: center;background-color: black;font-size: 12px;">
            <div class="col-md-4" id="footer-1" name="footer-1">
            </div>
            <div class="col-md-4" id="footer-2" name="footer-2">
                <span>BASSO S.A. {{ 'now' | date('Y') }} Copyright © - Todos los derechos reservados</span>
            </div>
            <div class="col-md-4" id="footer-3" name="footer-3">
            </div>
        
        </div>
    {% endblock %}
    
</div>
    {% block javascript %}
        <!-- JavaScripts -->
        <script src="{{ asset('js/jquery-3.5.1.min.js') }}"></script>
        <script src="{{ asset('js/popper.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/util_js.js') }}"></script>
    {% endblock %}
</body>
</html>