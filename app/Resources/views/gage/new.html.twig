            {{ form_row(form.toleranciaNeg) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.incertidumbre) }}
        </div>
    </div>
    <h4>CALIBRACION</h4>
    <hr/>
    <div class="row">
        <div class="col-md-3">
            {{ form_row(form.calUso) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.calibrador) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.ultCalibrador) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            {{ form_row(form.calFrecuencia) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.calFrecuenciaUM) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.calHoras) }}
        </div>
        {#
        <div class="col-md-3">
            {{ form_row(form.calUltimaFecha) }}
        </div>
        <div class="col-md-3">
            {{ form_row(form.calProximaFecha) }}
        </div>
        #}
    </div>
    <h4>RyR</h4>
    <hr/>

    <div class="row">
        <div class="col-md-2">
            {{ form_row(form.rrFrecuencia) }}
        </div>
        <div class="col-md-2">
            {{ form_row(form.rrFrecuenciaUM) }}
        </div>
        {#<div class="col-md-2">
            {{ form_row(form.rrUltimaFecha) }}
        </div>#}
        <div class="col-md-3">
            {{ form_row(form.rrResultado) }}
        </div>
        {#<div class="col-md-3">
            {{ form_row(form.rrProximaFecha) }}
        </div>#}
    </div>

    {{ form_rest(form) }}
    <p>
        <button type="submit" name="submit" value="save" class="btn btn-primary"> 
            Guardar <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        </button>
    </p>


    {{ form_end(form) }}

    <hr/>

<div class="form-group">
    <a class="btn btn-secondary" href="{{ path('gage') }}">
        <i class="fas fa-arrow-left"></i>
        Volver
    </a>
</div>




{% endblock %}

